@page
@model WeatherAlertAPI.Pages.Preferencias.IndexModel
@{
    ViewData["Title"] = "Preferências de Notificação";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">Nova Preferência</a>
    </p>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="mb-3">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Filtro.Cidade" class="control-label"></label>
                                    <input asp-for="Filtro.Cidade" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Filtro.Estado" class="control-label"></label>
                                    <input asp-for="Filtro.Estado" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Filtro.Ativo" class="control-label"></label>
                                    <select asp-for="Filtro.Ativo" class="form-control">
                                        <option value="">Todos</option>
                                        <option value="S">Ativo</option>
                                        <option value="N">Inativo</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary form-control">Filtrar</button>
                                </div>
                            </div>
                        </div>
                    </form>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Preferencias[0].Cidade)</th>
                                <th>@Html.DisplayNameFor(model => model.Preferencias[0].Estado)</th>
                                <th>@Html.DisplayNameFor(model => model.Preferencias[0].TemperaturaMin)</th>
                                <th>@Html.DisplayNameFor(model => model.Preferencias[0].TemperaturaMax)</th>
                                <th>@Html.DisplayNameFor(model => model.Preferencias[0].Ativo)</th>
                                <th>@Html.DisplayNameFor(model => model.Preferencias[0].DataCriacao)</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Preferencias)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TemperaturaMin)°C</td>
                                    <td>@Html.DisplayFor(modelItem => item.TemperaturaMax)°C</td>
                                    <td>
                                        <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                                            @(item.Ativo ? "Ativo" : "Inativo")
                                        </span>
                                    </td>
                                    <td>@item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-page="./Edit" asp-route-id="@item.IdPreferencia" class="btn btn-sm btn-primary">Editar</a>
                                            <a asp-page="./Details" asp-route-id="@item.IdPreferencia" class="btn btn-sm btn-info">Detalhes</a>
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="confirmarExclusao(@item.IdPreferencia)">
                                                Excluir
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Section {
    <script>
        function confirmarExclusao(id) {
            if (confirm('Tem certeza que deseja excluir esta preferência?')) {
                fetch(`/Preferencias/Delete/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Erro ao excluir preferência');
                    }
                });
            }
        }
    </script>
} 